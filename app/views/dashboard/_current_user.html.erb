<div class="container">
  <div class = "d-flex flex-row-reverse db-highlight" >
      <i class="fas fa-pen"> </i>
  </div>

  <p><%= @user.first_name %> <%= @user.last_name %></p>

  <%= cl_image_tag @user.photo, height: 150, width: 150, crop: :fill, class: "rounded-circle" %>

  <%= @user.username %>
  <p>Follows <%= link_to @followings_count, friend_list_dashboard_path(@user, friend_type: "follows")%>
  Followers <%= link_to @followers_count, friend_list_dashboard_path(@user, friend_type: "followers")%></p>




<%= @user.location %><br>
<%= @user.gender %><br>
<%= @user.username %><br>
<%= @user.bio %><br>
<%= @user.age %>
<% if current_user == @user %>
  <%= link_to "EDIT", edit_dashboard_path(@user) %>
  <% else %>
  <%= render @user %>
<% end %>

<p>Follows <%= link_to @followings_count, friend_list_dashboard_path(@user, friend_type: "follows")%></p>
<p>Followers <%= link_to @followers_count, friend_list_dashboard_path(@user, friend_type: "followers")%></p>

<p>FEED</p>
<% @checkin.each do |notification| %>
<%=  notification.comment %>
<%=  notification.place.name %> <br>
<% end %>
</div>
