<div class="banner-place-page" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @place.photo %>)">
  <%= @place.name %>
</div>
<div class="container container-checkin-new">
  <div class="row d-flex justify-content-center">
    <div class="checkin-form">
      <%= simple_form_for([@place, @checkin]) do |f|%>
      <%= f.input :comment, input_html: {value: 'Here!'} %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.input :type_of_music, collection: CheckIn::TYPE_OF_MUSIC %>
      <%= f.submit "I'm Here!", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
