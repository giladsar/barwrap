<div class="container container-checkins-index">
  <h2>What People are Talking About </h2>
  <% @checkins.each do |checkin| %>
  <div class="row">
    <div class="col-12">
      <div class="checkin">
        <div class="checkin-content">
          <% if !checkin.photo.nil? %>
          <%= cl_image_tag(checkin.photo, :height => 50, :crop => "pad") %>
          <div class="checkin-location">
            <p><%= link_to checkin.place.name, place_path(checkin.place) %></p>
          </div>

          <div class="checkin-comment">
            <%= link_to profile_dashboard_path(checkin.user) do %>
            <%= cl_image_tag checkin.user.photo , class:"check-avatar"%>
            <p> <strong><%= checkin.user.username %></strong></p><tab>
            <% end %>
            <p> <%= checkin.comment %></p>
          </div>

          <% else %>
          <div class="checkin-comment">
            <%= link_to profile_dashboard_path(checkin.user) do %>
            <%= cl_image_tag checkin.user.photo , class:"check-avatar"%>
            <p> <strong><%= checkin.user.username %></strong></p> <tab>
            <% end %>
            <p> <%= checkin.comment %></p>
          </div>
          <% end %>
        </div>
        <div class="checkin-time">
          <p><%= distance_of_time_in_words(Time.now, checkin.created_at) %></p>
        </div>
      </div>
    </div>
  </div>
  <hr>
  <% end %>
</div>
